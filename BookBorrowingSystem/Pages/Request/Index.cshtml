@page 
@model BookBorrowingSystem.Pages.Request.IndexModel
@{
    ViewData["Title"] = "All Borrow Requests";
}

<h1 class="text-center my-4">All Borrow Requests</h1>

<div class="d-flex justify-content-around">
	<form method="get" class="mb-4">
		<div class="row">
			<div class="col-md-4 p-1">
				<input type="number" name="SearchRequestId" class="form-control" placeholder="Request ID" value="@Model.SearchRequestId" />
			</div>
			<div class="col-md-4 p-1">
				<input type="text" name="SearchUserName" class="form-control" placeholder="User Name" value="@Model.SearchUserName" />
			</div>
			<div class="col-md-4 p-1">
				<button type="submit" class="btn btn-primary">Search</button>
			</div>
		</div>
	</form>
</div>

<div class="container">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Request ID</th>
                <th>Book ID</th>
                <th>User Name</th>
                <th>Request Date</th>
                <th>Borrow Date</th>
                <th>Return Date</th>
                <th>Status</th>
                <th>Processed By</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Requests != null && Model.Requests.Count > 0)
            {
                int index = 1;
                foreach (var req in Model.Requests)
                {
                    <tr>
                        <td>@req.RequestId</td>
                        <td>@req.BookTitle</td>
                        <td>@req.AccountUserName</td>
                        <td>@req.RequestDate.ToString("dd-MM-yyyy")</td>
                        <td>@req.BorrowDate.ToString("dd-MM-yyyy")</td>
                        <td>@req.ReturnDate.ToString("dd-MM-yyyy")</td>
                        <td>@req.Status</td>
                        <td>@req.ProcessedUserName</td>
                        <td>
                            @if (req.Status == "Pending")
                            {
                                <form method="post" asp-page-handler="Borrow" asp-route-id="@req.RequestId" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">Borrow</button>
                                </form>
                            }
                            else if (req.Status == "Borrowed")
                            {
                                <form method="post" asp-page-handler="Return" asp-route-id="@req.RequestId" style="display:inline;">
                                    <button type="submit" class="btn btn-primary btn-sm">Return</button>
                                </form>
                            }
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No requests found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-SearchRequestId="@Model.SearchRequestId" asp-route-SearchUserName="@Model.SearchUserName">Previous</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" asp-route-pageNumber="@i" asp-route-SearchRequestId="@Model.SearchRequestId" asp-route-SearchUserName="@Model.SearchUserName">@i</a>
            </li>
        }
        <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-SearchRequestId="@Model.SearchRequestId" asp-route-SearchUserName="@Model.SearchUserName">Next</a>
        </li>
    </ul>
</nav>