@using System.Security.Claims
@{
    var role = User.FindFirst(ClaimTypes.Role)?.Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookBorrowingSystem</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookBorrowingSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/images/Logo.png" alt="PHAT Library" style="width: 60px; height: auto; margin-right: 5px;" />
                @* <a class="navbar-brand" asp-area="" asp-page="/Index">BookBorrowingSystem</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                        <!-- Dynamic links based on Role -->
                        @if (role == "User")
                        {
                            <a class="navbar-brand" asp-area="" asp-page="/Book/Index">PHAT Library</a>
                            @* <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Book/Index">Book</a>
                            </li> *@
                             <li class="nav-item"> 
                                <a class="nav-link text-dark" asp-area="" asp-page="/Request/History">History</a>
                             </li> 
                        }
                        else if (role == "Librarian")
                        {
                            <a class="navbar-brand" asp-area="" asp-page="/Request/Index">PHAT Library</a>
                            @* <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Request/Index">Request</a>
                            </li> *@
                        }
                        else if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Index">Accounts Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/ManageBook/Index">Books Management</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Dashboard/Index">Dashboard</a>
                            </li>
                        }

                    </ul>

                    <!-- Right side: User name & Logout -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex align-items-center">
                            <span class="me-2">Hello, @User.Identity.Name!</span>
                            <form method="get" asp-page="/Authen/Logout/Index" class="d-inline">
                                <button type="submit" class="btn btn-link">Logout</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - PHAT Library - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/libraryhub")
            .build();

        connection.on("ReloadBookIndex", () => {
            setTimeout(() => location.reload(), 300);
        });

        connection.start().catch(err => console.error(err));
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
