@page
@model BookBorrowingSystem.Pages.Authen.AccessDenied.IndexModel
@{
    Layout = null;
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/AccessDenied.css" />
    <style>
        body {
            background-color: #EEE8E0;
        }

        .access-message {
            text-align: center;
            font-size: 3.5rem;
            color: #9C0502;
            margin-top: 200px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <p class="access-message">Access Denied – You don’t have permission to view this page.</p>
    <div class="hover">
        <div class="background">
            <div class="door">403</div>
            <div class="rug"></div>
        </div>
        <div class="foreground">
            <div class="bouncer">
                <div class="head">
                    <div class="neck"></div>
                    <div class="eye left"></div>
                    <div class="eye right"></div>
                    <div class="ear"></div>
                </div>
                <div class="body"></div>
                <div class="arm"></div>
            </div>
            <div class="poles">
                <div class="pole left"></div>
                <div class="pole right"></div>
                <div class="rope"></div>
            </div>
        </div>
    </div>
</body>
</html>
