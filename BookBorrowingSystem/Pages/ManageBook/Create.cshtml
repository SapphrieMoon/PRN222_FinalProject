@page
@model BookBorrowingSystem.Pages.ManageBook.CreateModel

@{
    ViewData["Title"] = "Create Book";
}

<h1>Create Book</h1>

@* <h4>Book</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.Author" class="control-label"></label>
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.Quantity" class="control-label"></label>
                <input asp-for="Book.Quantity" class="form-control" type="number" min="0" />
                <span asp-validation-for="Book.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.Avaliable" class="control-label">Available</label>
                <input asp-for="Book.Avaliable" class="form-control" type="number" min="0" />
                <span asp-validation-for="Book.Avaliable" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Book.ImagePath" class="control-label">Image Path</label>
                <input asp-for="Book.ImagePath" class="form-control" />
                <span asp-validation-for="Book.ImagePath" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@* <div class="mt-1">
    <a asp-page="Index">Back to List</a>
</div> *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}