@page
@model BookBorrowingSystem.Pages.ManageBook.DetailsModel

@{
    ViewData["Title"] = "Book Details";
}

<h1>Book Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Author)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Quantity)
        </dd>

        <dt class="col-sm-2">
            Available
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Avaliable)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Book.ImagePath))
            {
                <img src="@Model.Book.ImagePath" alt="Book Image" style="max-width: 200px; max-height: 200px;" />
                <br />
                <small class="text-muted">@Model.Book.ImagePath</small>
            }
            else
            {
                <span class="text-muted">No image available</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Book?.BookId" class="btn btn-primary">Edit</a> |
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>